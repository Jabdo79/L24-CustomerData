<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<typedef name="encryptedString" class="org.jasypt.hibernate4.type.EncryptedStringType">
		<param name="algorithm">PBEWithMD5AndTripleDES</param>
		<param name="password">jasypt</param>
		<param name="keyObtentionIterations">1000</param>
	</typedef>

	<class name="cust.data.users.User" table="users">
		<id name="id" column="ID" type="int">
			<generator class="increment"></generator>
		</id>
		<property name="name" column="name" type="string"></property>
		<property name="pass" column="pass" type="string"></property>
		<property name="email" column="email" type="string"></property>
		<property name="fullname" column="fullname" type="string"></property>
	</class>
</hibernate-mapping>  
 